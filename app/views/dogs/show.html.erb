<% if @dog.photo.attached? %>
  <div class="profile_banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path @dog.photo.key, height: 1200, width: 1600, crop: :fill %>)">
<% else %>
  <div class="profile_banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/800x600/?dog/<%= rand(50) %>);">
<% end %>
  <div class="container">
    <div>
      <h1>Meet <%= @dog.name %></h1>
      <p> Breed: <%= @dog.breed %> </p>
      <p> <%=  @dog.name %> bio: <%= @dog.bio %></p>
      <p> <%=  @dog.name %> location: <%=  @dog.location %> </p>
      <p>  Her owner is </p>
    </div>
      <div class="button mb-3">
        <%= link_to "Book Now", new_dog_booking_path(@dog), class: "btn-danger btn-lg" %>
      </div>
      <div class="combine-btn">
        <div class="button mb-3">
          <%= link_to "Go back to other dogs" , dogs_path, class: "btn-light btn-sm" %>
        </div>
        <div class="button mb-3">
          <%= link_to "Edit your dog", edit_dog_path(@dog), class: "btn-light btn-sm" %>
        </div>
        <div class="button mb-3">
          <p> <%= link_to "Remove your dog", dog_path(@dog), method: :delete, data: { confirm: "Are you sure?" } , class: "btn-light btn-sm" %> </p>
        </div>
        <div class="button mb-3">
        <%= link_to "Add review", new_dog_review_path(@dog), class: "btn-light btn-sm" %>
        </div>
      </div>
      <div class="dog-reviews">
      <h1> <%= @dog.name %> Reviews </h1>
      <% @dog.reviews.each do |review| %>
      <div class="card">
      <p> <%= review.comment%> </p>
      <p> The Dawgs rating is: <%= dog.rating %> </p>
      <% end %>
      </div>

  </div>

