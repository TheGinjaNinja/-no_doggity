<div class="container">
  <div class="title">
    <h1 style="color: black;">Find your new best friend</h1>
    <div>
    <div class="dog-search-container mt-0 col-xs-12 col-sm-4 col-sm-offset-3 ">
      <%= simple_form_for :search, url: dogs_path, method: :get do |f| %>
        <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search Dawgs..." />
        </div>
      <% end %>
      <div>
        <i id= "search-icon" class="fas fa-search"></i>
      </div>
    </div>
    </div>
  </div>
  <div id="map" style="width: 100%; height: 600px"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>

