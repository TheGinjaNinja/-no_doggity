<div class="flexbox">

  <div class="dog-card-container">
    <div class="title">
      <h1>Find your new best friend</h1>
      <div class="button-container">
        <%= simple_form_for :search, url: dogs_path, method: :get do |f| %>
          <div class="search-form-control form-group">
            <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search by location for your dream dawg" />
            <button name="button" type="submit" class="btn btn-flat">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        <% end %>
      </div>
    </div>
    <div class="dog-cards">
      <% @dogs.each do |dog| %>
        <% if dog.photo.attached? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path dog.photo.key, height: 400, width: 400, crop: :fill %>)">
        <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/800x600/?dog/<%= rand(500) %>);">
        <% end %>
        <h2><%= link_to dog.name, dog_path(dog), class: "text" %></h2>
        </div>
      <%end%>
    </div>
  </div>

  <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>


